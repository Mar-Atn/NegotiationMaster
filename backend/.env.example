# Environment Configuration for NegotiationMaster Voice-Powered Backend

# Basic Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:./dev.sqlite3
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/negotiation_master

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ElevenLabs Voice Synthesis Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_MODEL=eleven_turbo_v2_5
ELEVENLABS_OPTIMIZE_LATENCY=4

# Voice Configuration
VOICE_MAX_TEXT_LENGTH=5000
VOICE_RESPONSE_TIMEOUT=30000
VOICE_STREAM_BUFFER_SIZE=1048576
VOICE_SESSION_TIMEOUT=300000

# Performance Optimization
REDIS_URL=redis://localhost:6379
ENABLE_RESPONSE_CACHING=true
CACHE_TTL_SECONDS=300
ENABLE_COMPRESSION=true
ENABLE_CONNECTION_POOLING=true

# Monitoring and Analytics
ENABLE_VOICE_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ANALYTICS_BUFFER_SIZE=100
MONITORING_INTERVAL_MS=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/negotiation-master.log
ENABLE_REQUEST_LOGGING=true

# Security Configuration
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_INPUT_VALIDATION=true
TRUST_PROXY=false

# WebSocket Configuration
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_MAX_PAYLOAD=1048576

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=10000

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
ENABLE_HEALTH_ENDPOINTS=true

# Development Only
ENABLE_DEBUG_ROUTES=true
ENABLE_MOCK_ELEVENLABS=false

# Production Only (uncomment for production)
# FORCE_SSL=true
# HSTS_MAX_AGE=31536000
# SESSION_SECURE=true
# COOKIE_SECURE=true

# External Integrations
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Backup and Recovery
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket